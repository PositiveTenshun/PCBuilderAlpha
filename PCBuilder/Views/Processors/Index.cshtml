@model IEnumerable<DBModel.Processor>

@{
    ViewBag.Title = "Processors";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="displayBuild">

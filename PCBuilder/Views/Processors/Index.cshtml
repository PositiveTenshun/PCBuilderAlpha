                @Html.DisplayFor(modelItem => item.ProcessorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pins)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ComponentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ComponentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ComponentId })
            </td>
        </tr>
    }

</table>
